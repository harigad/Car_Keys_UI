<Alloy>
	<Window navBarHidden="true"  backgroundColor="#fff" >
		<ScrollView id="scroll" top="0" height="Ti.UI.FILL" >
			<View layout="vertical" top="60"  height="Ti.UI.SIZE" >
	  		<View layout="horizontal" id="main" height="Ti.UI.SIZE" >
			
			<View id="model" backgroundColor="#444" width="200" height="200"  borderWidth="0.5" borderColor="#fff" >
				<View height="Ti.UI.SIZE" width="Ti.UI.SIZE" layout="vertical" >
					<Label color="#999" id="owner_name"  >Hari's</Label>
					<Label color="#fff" id="model_name"  ></Label>
				</View>
			</View>
		    <View layout="vertical" height="Ti.UI.SIZE" width="Ti.UI.SIZE" >
		    	<View id="year" backgroundColor="#555" width="120" height="100" borderWidth="0.5" borderColor="#fff" >
						<Label color="#fff" id="year_name" ></Label>
				</View>
		    	<View id="logo" backgroundColor="#333" width="120" height="100" borderWidth="0.5" borderColor="#fff"  >
						<View  width="80" height="80" borderRadius="40" backgroundColor="#222" borderColor="#666" borderWidth="5" >
							<ImageView id="logo_image" width="48" height="48" borderRadius="4" ></ImageView>
						</View>
				</View>
		    </View>
		
		<View id="photo" backgroundColor="#aaa" width="320" height="Ti.UI.SIZE"   >
				<ImageView with="320" id="photo_image" top="0" left="0" borderWidth="0.5" borderColor="#fff" ></ImageView>
		</View>
			
		    <View layout="vertical" height="Ti.UI.SIZE" width="Ti.UI.SIZE" >
		    	<View   backgroundColor="#73a4e7" width="160" height="80" borderWidth="0.5" borderColor="#fff" >
						<Label color="#fff" id="mileage" >17 / 25 mpg</Label>
				</View>
		    	<View  backgroundColor="#6590f1" width="160" height="80" borderWidth="0.5" borderColor="#fff"  >
						<Label color="#fff" id="cylinder" >V.6</Label>
				</View>
		    </View>
		
		<View  backgroundColor="#5190ca" width="160" height="160"  borderWidth="0.5" borderColor="#fff" >
				<View  width="120" height="120" borderRadius="60" backgroundColor="#5190ca" borderColor="#fff" borderWidth="5" >
						<Label id="hp">320 Horses</Label>
				</View>
		</View>
		
		
		<View id="cylinder" backgroundColor="#7dc891" width="160" height="160"  borderWidth="0.5" borderColor="#fff" >
				<Label id="recalls">recalls</Label>
		</View>
		
		<View id="hp" backgroundColor="#8ae671" width="160" height="160"  borderWidth="0.5" borderColor="#fff" >
				<Label id="schedules">schedules</Label>
		</View>
		
		</View>
	  	</View>
	  </ScrollView>
		<Require type="view" src="header/header" id="header"/>
	</Window>
</Alloy>
