<Alloy>
		<TableViewRow layout="vertical" height="Ti.UI.SIZE" selectedBackgroundColor='transparent' >
	  		<View layout="horizontal" id="main" height="Ti.UI.SIZE" >
			
			<View id="model" backgroundColor="#40a3ff" width="200" height="200"  borderWidth="0.5" borderColor="#fff" >
				<View height="Ti.UI.SIZE" width="Ti.UI.SIZE" layout="vertical" >
					<Label id="model_name"  ></Label>
				</View>
			</View>
		    <View layout="vertical" height="Ti.UI.SIZE" width="Ti.UI.SIZE" >
		    	<View id="year" backgroundColor="#40a3ff" width="120" height="100" borderWidth="0.5" borderColor="#fff" onClick="goToYear" >
						<Label color="#fff" id="year_name" ></Label>
				</View>
		    	<View id="logo" backgroundColor="#40a3ff" width="120" height="100" borderWidth="0.5" borderColor="#fff" onClick="goToMake" >
						<View  width="80" height="80" borderRadius="40" backgroundColor="#222" borderColor="#fff" borderWidth="5" >
							<ImageView id="logo_image" width="48" height="48" borderRadius="4" ></ImageView>
						</View>
				</View>
		    </View>
		
		<View id="photo" backgroundColor="#40a3ff" width="Ti.UI.FILL" height="Ti.UI.SIZE"   >
				<ImageView with="320" id="photo_image" top="0" left="0" ></ImageView>
		</View>
			
		    <View layout="vertical" height="Ti.UI.SIZE" width="Ti.UI.SIZE" >
		    	<View  id="mileage_container" backgroundColor="#40a3ff" width="160" height="80" borderWidth="0.5" borderColor="#fff" >
						<Label color="#fff" id="mileage" ></Label>
				</View>
		    	<View  id="cylinder_container" backgroundColor="#40a3ff" width="160" height="80" borderWidth="0.5" borderColor="#fff" onClick="goToCylinder"  >
						<Label  color="#fff" id="cylinder" ></Label>
				</View>
		    </View>
		
		<View  id="hp_container" backgroundColor="#40a3ff" width="160" height="160"  borderWidth="0.5" borderColor="#fff" >
				<View  width="120" height="120" borderRadius="60" backgroundColor="#aaa" borderColor="#fff" borderWidth="5" >
						<Label id="hp" color="#fff" ></Label>
				</View>
		</View>
		
		
		<View id="recalls_container" backgroundColor="#40a3ff" width="160" height="160"  borderWidth="0.5" borderColor="#fff" >
				<Label id="recalls"  color="#fff" >recalls</Label>
		</View>
		
		<View id="schedules_container" backgroundColor="#40a3ff" width="160" height="160"  borderWidth="0.5" borderColor="#fff" >
				<Label id="schedules">schedules</Label>
		</View>
		</View>
	  	</TableViewRow>
</Alloy>
