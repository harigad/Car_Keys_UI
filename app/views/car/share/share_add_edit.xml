			<TextField id="search" onChange="onSearch" hintText="search friends" ></TextField>
			<View onClick="onCancel" id="cancel_btn" >
				<Label color="#fff">cancel</Label>
			</View>
		</View>
		<ScrollView height="Ti.UI.FILL" top="50" >
			<View layout="vertical" id="friends" height="Ti.UI.SIZE">
					<View top="20" left="10" height="Ti.UI.SIZE" >
						<Label height="Ti.UI.SIZE" color="#999" >loading...</Label>
					</View>
			</View>
		</ScrollView>
	</Window>
</Alloy>
