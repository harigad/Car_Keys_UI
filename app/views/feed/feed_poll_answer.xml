<Alloy>
	<TableViewRow className="row" selectionStyle="Titanium.UI.iPhone.TableViewCellSelectionStyle" >
	<View id="main" >
		<View id="topView" onClick="goToUser" >
			<View id="photo"></View>
				<View id="topRight"   >
					<View height="Ti.UI.SIZE">
						<Label id="name" left="0" ></Label>
						<Label id="date"></Label>
					</View>
					<Label id="title"  ></Label>
				</View>
		</View>
		
		<View id="bottomView"  onClick="goToPoll" bottom="10" layout="vertical" >
			<Label id="question" class="desc" width="200" height="Ti.UI.SIZE" right="10" ></Label>
			<Label id="answer" width="200" height="Ti.UI.SIZE" right="10" ></Label>
		</View>
		<View height="1" backgroundColor="#cecece" ></View>
	</View>
	</TableViewRow>
</Alloy>