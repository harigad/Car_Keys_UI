<Alloy>
	<Window onFocus="onWindowFocus">
		<ImageView id="bgImage"></ImageView>
		<View top="0" height="60" backgroundColor="#f1f1f1" >
			<View top="10" height="50" >
				<View class="btn_container" onClick="onCancel" left="10" >
					<Label class="btn" >back</Label>
				</View>
				<Label id="question">
					Mileage
				</Label>
				<View class="btn_container" onClick="onNext" right="10" >
					<Label class="btn">next</Label>
				</View>
			</View>	
		</View>
		<View id="main"  >
			<View class="TextFieldContainer">
				<TextField id="plate" hint="enter your current mileage" onFocus="onFocus" onChange="onChange" onBlur="onBlur" ></TextField>
				<Label class="TextFieldLabel" id="plate_label" ></Label>
			</View>
			<Label id="help_label" onClick="help" >help! why the mileage?</Label>
		</View>
	</Window>	
</Alloy>