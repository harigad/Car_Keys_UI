<Alloy>
	<Window>
	<ScrollView id="scroll"  >
		<View id="profile_container" >
			<View id="plate_container" onClick="editPlate">
				<Label id="plate">create your CARKEY#</Label>
				<View id="edit_icon"></View>
			</View>
		</View>
		<View id="main">
			 <Require src="ridealong/requests" id="requests"/>
			 <View class="my_rides"> 
			 	<Label class="separator" width="Ti.UI.SIZE" >my cars</Label>
			 	<Label class="separator" width="Ti.UI.SIZE" left="60" color="#2179ca" onClick="onAddNew" >(add new)</Label>
			 </View>
			 <Require src="mycars/mycars" id="mycars"/>
			 <View class="my_rides"> 
			 	<Label class="separator" width="Ti.UI.SIZE" >my friends</Label>
			 	<Label class="separator" width="Ti.UI.SIZE" left="75" color="#2179ca" onClick="onInvite" ></Label>
			 </View>
			 <Require src="feed/feed" id="feed"/>
		</View>
	</ScrollView>
		<View onClick="onRideAlong" id="ride_along" width="111" height="66" borderRadius="4" backgroundImage="common/ridealong_blue_text.png" top="0" ></View>
	</Window>
</Alloy>