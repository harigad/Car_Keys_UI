	<View height="20" backgroundColor="#ffa633" top="0"></View>
	<Require src="ridealong/home_menu" id="home_menu" top="0" />
	<View onClick="onRideAlong" id="ride_along" width="111" height="66" borderRadius="4" backgroundImage="common/ridealong_blue_text.png" top="20" ></View>
