<Alloy>
	<Window>
		<View height="Ti.UI.SIZE" layout="vertical" left="40" right="40" >
				<View id="request" height="Ti.UI.SIZE" width="Ti.UI.SIZE" borderRadius="4" ></View>
				<View borderRadius="4" backgroundColor="#fff" height="Ti.UI.SIZE" bottom="5" onClick="onAccept" top="20" >
					<Label color="#f49033" height="Ti.UI.SIZE" top="20" bottom="20"  >ACCEPT</Label>
				</View>
				<View borderRadius="4" backgroundColor="#999" height="Ti.UI.SIZE" top="5" onClick="onDelete" >
					<Label color="#fff" height="Ti.UI.SIZE" top="20" bottom="20" >REJECT</Label>
				</View>
		</View>
	</Window>
</Alloy>