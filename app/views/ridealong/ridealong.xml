<Alloy>
	<Window onFocus="onWindowFocus">
		<View layout="vertical" >
		<View height="50" backgroundColor="#f49033" top="0" >
				<View class="btn_container" onClick="onCancel" left="10" >
					<Label class="btn" >cancel</Label>
				</View>
				<Label id="question">
					RideAlong
				</Label>
				<View class="btn_container" onClick="onEdit" right="10" >
					<Label class="btn">search</Label>
				</View>
		</View>
		<View class="TextFieldContainer" top="10" >
				<Label class="TextFieldLabel" id="plate_label" ></Label>
				<TextField id="plate" hintText="search by Bumper Sticker" onFocus="onFocus" onChange="onChange" onBlur="onBlur" onReturn="onEdit" ></TextField>
		</View>
		</View>
	</Window>
</Alloy>
