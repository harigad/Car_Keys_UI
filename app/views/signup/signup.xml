<Alloy>
	<Window>
		<ImageView id="bgImage"></ImageView>
		<View top="0" height="60" backgroundColor="#f49033" >
			<View top="10" height="50" >
				<View class="btn_container" onClick="onCancel" left="10" >
					<Label class="btn" >cancel</Label>
				</View>
				<Label id="question">
					Add my Vehichle
				</Label>
				<View class="btn_container" onClick="process" right="10" >
					<Label class="btn">next</Label>
				</View>
			</View>	
		</View>
		<View id="main"  >
			<View class="TextFieldContainer">
				<Label class="TextFieldLabel" id="plate_label" ></Label>
				<TextField id="plate" hint="VIN number" onFocus="onFocus" onChange="onChange" onBlur="onBlur" ></TextField>
			</View>
		</View>
	</Window>	
</Alloy>