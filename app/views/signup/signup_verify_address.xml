<Alloy>
	<Window>
		<ImageView id="bgImage"></ImageView>
		<View height="50" backgroundColor="#f49033" top="0" >
				<View class="btn_container" onClick="onCancel" left="10" >
					<Label class="btn" >cancel</Label>
				</View>
				<Label id="question">
					Verify your registration address!
				</Label>
				<View class="btn_container" onClick="onReturn" right="10" >
					<Label class="btn">Verify</Label>
				</View>
		</View>
		<View id="main" >
			<View class="answer_container" >
				<TextField id="address" hintText="Enter your address line#" onReturn="onReturn" ></TextField>
			</View>
			<View class="hr"></View>
			<View class="answer_container" layout="horizontal" >
				<View class="answer_background" ><Label id="city" class="answer"  ></Label></View>
			</View>
		</View>
	</Window>	
</Alloy>